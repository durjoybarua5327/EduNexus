generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  DEPT_ADMIN
  TEACHER
  STUDENT
  CR
}

enum Visibility {
  PUBLIC
  PRIVATE
}

model University {
  id          String       @id @default(cuid())
  name        String
  departments Department[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Department {
  id           String    @id @default(cuid())
  name         String
  universityId String
  university   University @relation(fields: [universityId], references: [id])
  
  users        User[]
  batches      Batch[]
  courses      Course[]
  notices      Notice[]
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          Role      @default(STUDENT)
  
  departmentId  String?
  department    Department? @relation(fields: [departmentId], references: [id])

  // Profile Relations
  studentProfile StudentProfile?
  teacherProfile TeacherProfile?

  // Content ownership
  folders       Folder[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model StudentProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  batchId     String
  batch       Batch    @relation(fields: [batchId], references: [id])
  
  studentIdNo String
}

model TeacherProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courses     Course[]
  designation String?
}

model Batch {
  id            String   @id @default(cuid())
  name          String   // e.g. "2024-A"
  departmentId  String
  department    Department @relation(fields: [departmentId], references: [id])
  
  students      StudentProfile[]
  // routines      Routine[] // TODO: Add Routine model later if needed
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Course {
  id            String   @id @default(cuid())
  name          String
  code          String
  semester      String
  
  departmentId  String
  department    Department @relation(fields: [departmentId], references: [id])
  
  teacherId     String?
  teacher       TeacherProfile? @relation(fields: [teacherId], references: [id])
  
  materials     Folder[] // Course materials (teacher uploads)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Folder {
  id          String   @id @default(cuid())
  name        String
  
  parentId    String?
  parent      Folder?  @relation("NestedFolders", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subFolders  Folder[] @relation("NestedFolders")

  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id])

  isPublic    Boolean  @default(false)
  
  files       File[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model File {
  id        String   @id @default(cuid())
  name      String
  url       String
  size      Int?
  type      String?
  
  folderId  String
  folder    Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

model Notice {
  id           String    @id @default(cuid())
  title        String
  content      String    @db.Text
  
  departmentId String?   
  department   Department? @relation(fields: [departmentId], references: [id])
  
  priority     String    @default("NORMAL") // NORMAL, URGENT, PINNED
  expiresAt    DateTime?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
